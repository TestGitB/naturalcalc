<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <com.mkulesh.micromath.widgets.FormulaLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:tag="@string/function_main_layout"
        app:symbol="SQRT"
        app:symbolViewIndex="2"
        app:verticalTermPadding="true">

        <com.mkulesh.micromath.widgets.FormulaLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:specialAlignment="below_the_next">

            <com.mkulesh.micromath.widgets.FormulaTextView
                style="@style/FormulaTextViewStyle"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="@string/formula_operator_key" />
        </com.mkulesh.micromath.widgets.FormulaLayout>

        <com.mkulesh.micromath.widgets.FormulaLayout
            android:id="@+id/nthrt_power_layout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:specialAlignment="top_of_next">

            <com.mkulesh.micromath.widgets.CalcEditText
                style="@style/FormulaTextEditStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/formula_left_term_key" />
        </com.mkulesh.micromath.widgets.FormulaLayout>

        <com.mkulesh.micromath.widgets.FormulaLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <com.mkulesh.micromath.widgets.CalcEditText
                style="@style/FormulaTextEditStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/formula_right_term_key" />
        </com.mkulesh.micromath.widgets.FormulaLayout>
    </com.mkulesh.micromath.widgets.FormulaLayout>

</merge>