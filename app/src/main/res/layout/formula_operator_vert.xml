<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:android="http://schemas.android.com/apk/res/android">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:baselineAlignedChildIndex="1"
        android:gravity="center_horizontal"
        android:orientation="vertical">

        <com.mkulesh.micromath.widgets.FormulaLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <com.mkulesh.micromath.widgets.CalcEditText
                style="@style/FormulaTextEditStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/formula_left_term_key" />
        </com.mkulesh.micromath.widgets.FormulaLayout>

        <com.mkulesh.micromath.widgets.CalcTextView
            style="@style/FormulaTextViewStyle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/formula_operator_key" />

        <com.mkulesh.micromath.widgets.FormulaLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <com.mkulesh.micromath.widgets.CalcEditText
                style="@style/FormulaTextEditStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/formula_right_term_key" />
        </com.mkulesh.micromath.widgets.FormulaLayout>
    </LinearLayout>

</merge>