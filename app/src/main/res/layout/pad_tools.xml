<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="?android:actionBarSize"
    android:background="?colorPrimary"
    android:orientation="horizontal">

    <com.mkulesh.micromath.formula.button.CalcImageButton
        android:id="@+id/btn_add_row"
        style="@style/CalcButtonStyle"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:tint="?android:textColorPrimary"
        app:srcCompat="@drawable/ic_result" />

    <com.mkulesh.micromath.formula.button.CalcImageButton
        android:id="@+id/btn_add_assign"
        style="@style/CalcButtonStyle"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:tint="?android:textColorPrimary"
        app:srcCompat="@drawable/ic_equation" />

    <com.mkulesh.micromath.formula.button.CalcImageButton
        android:id="@+id/btn_add_term"
        style="@style/CalcButtonStyle"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:tint="?android:textColorPrimary"
        app:srcCompat="@drawable/ic_new_term" />

    <com.mkulesh.micromath.formula.button.CalcImageButton
        android:id="@+id/btn_arrow_left"
        style="@style/CalcButtonStyle"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        app:srcCompat="@drawable/ic_keyboard_arrow_left_white_24dp" />

    <com.mkulesh.micromath.formula.button.CalcImageButton
        android:id="@+id/btn_arrow_right"
        style="@style/CalcButtonStyle"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        app:srcCompat="@drawable/ic_keyboard_arrow_right_white_24dp" />

    <com.mkulesh.micromath.formula.button.CalcImageButton
        android:id="@+id/btn_delete"
        style="@style/CalcButtonStyle"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        app:srcCompat="@drawable/ic_backspace_white_24dp" />

    <com.mkulesh.micromath.formula.button.CalcImageButton
        android:id="@+id/btn_clear"
        style="@style/CalcButtonStyle"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        app:srcCompat="@drawable/ic_clear_all_white_24dp" />
</LinearLayout>