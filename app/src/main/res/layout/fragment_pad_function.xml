<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    android:orientation="vertical"
    android:weightSum="4">

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingBottom="8dp"
        android:paddingLeft="8dp"
        android:paddingRight="8dp"
        android:paddingTop="8dp"
        android:weightSum="4">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <com.mkulesh.micromath.formula.button.CalcTextButton
                android:id="@+id/btn_const_pi"
                style="@style/CalcButtonStyle.Function"
                android:layout_height="@dimen/function_button_height"
                android:src="@drawable/ic_function_identity"
                android:text="Pi" />

            <com.mkulesh.micromath.formula.button.CalcTextButton
                android:id="@+id/btn_sin"
                style="@style/CalcButtonStyle.Function"
                android:layout_height="@dimen/function_button_height"
                android:src="@drawable/ic_function_identity"
                android:text="sin" />

            <com.mkulesh.micromath.formula.button.CalcTextButton
                android:id="@+id/btn_cos"
                style="@style/CalcButtonStyle.Function"
                android:layout_height="@dimen/function_button_height"
                android:src="@drawable/ic_function_sqrt"
                android:text="cos" />

            <com.mkulesh.micromath.formula.button.CalcTextButton
                android:id="@+id/btn_tan"
                style="@style/CalcButtonStyle.Function"
                android:layout_height="@dimen/function_button_height"
                android:src="@drawable/ic_function_factorial"
                android:text="tan" />

            <com.mkulesh.micromath.formula.button.CalcTextButton
                android:id="@+id/btn_cot"
                style="@style/CalcButtonStyle.Function"
                android:layout_height="@dimen/function_button_height"
                android:src="@drawable/ic_function_conjugate"
                android:text="cot" />


        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <com.mkulesh.micromath.formula.button.CalcTextButton
                android:id="@+id/btn_const_i"
                style="@style/CalcButtonStyle.Function"
                android:layout_height="@dimen/function_button_height"
                android:src="@drawable/ic_function_identity"
                android:text="I" />

            <com.mkulesh.micromath.formula.button.CalcTextButton
                android:id="@+id/btn_asin"
                style="@style/CalcButtonStyle.Function"
                android:layout_height="@dimen/function_button_height"
                android:src="@drawable/ic_function_identity"
                android:text="asin" />

            <com.mkulesh.micromath.formula.button.CalcTextButton
                android:id="@+id/btn_acos"
                style="@style/CalcButtonStyle.Function"
                android:layout_height="@dimen/function_button_height"
                android:src="@drawable/ic_function_sqrt"
                android:text="acos" />

            <com.mkulesh.micromath.formula.button.CalcTextButton
                android:id="@+id/btn_atan"
                style="@style/CalcButtonStyle.Function"
                android:layout_height="@dimen/function_button_height"
                android:text="atan" />

            <com.mkulesh.micromath.formula.button.CalcTextButton
                android:id="@+id/btn_atan2"
                style="@style/CalcButtonStyle.Function"
                android:layout_height="@dimen/function_button_height"
                android:text="atan2" />

            <com.mkulesh.micromath.formula.button.CalcTextButton
                android:id="@+id/btn_acot"
                style="@style/CalcButtonStyle.Function"
                android:layout_height="@dimen/function_button_height"
                android:src="@drawable/ic_function_conjugate"
                android:text="acot" />


        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">


            <com.mkulesh.micromath.formula.button.CalcTextButton
                android:id="@+id/btn_const_e"
                style="@style/CalcButtonStyle.Function"
                android:layout_height="@dimen/function_button_height"
                android:src="@drawable/ic_function_identity"
                android:text="E" />

            <com.mkulesh.micromath.formula.button.CalcTextButton
                android:id="@+id/btn_exp"
                style="@style/CalcButtonStyle.Function"
                android:layout_height="@dimen/function_button_height"
                android:src="@drawable/ic_function_identity"
                android:text="exp" />

            <com.mkulesh.micromath.formula.button.CalcTextButton
                android:id="@+id/btn_log"
                style="@style/CalcButtonStyle.Function"
                android:layout_height="@dimen/function_button_height"
                android:src="@drawable/ic_function_power"
                android:text="ln" />

            <com.mkulesh.micromath.formula.button.CalcTextButton
                android:id="@+id/btn_log10"
                style="@style/CalcButtonStyle.Function"
                android:layout_height="@dimen/function_button_height"
                android:text="log10" />

            <com.mkulesh.micromath.formula.button.CalcTextButton
                android:id="@+id/btn_logn"
                style="@style/CalcButtonStyle.Function"
                android:layout_height="@dimen/function_button_height"
                android:text="logn" />


        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <com.mkulesh.micromath.formula.button.CalcTextButton
                android:id="@+id/btn_floor"
                style="@style/CalcButtonStyle.Function"
                android:layout_height="@dimen/function_button_height"
                android:text="floor" />

            <com.mkulesh.micromath.formula.button.CalcTextButton
                android:id="@+id/btn_sinh"
                style="@style/CalcButtonStyle.Function"
                android:layout_height="@dimen/function_button_height"
                android:text="sinh" />


            <com.mkulesh.micromath.formula.button.CalcTextButton
                android:id="@+id/btn_cosh"
                style="@style/CalcButtonStyle.Function"
                android:layout_height="@dimen/function_button_height"
                android:text="cosh" />

            <com.mkulesh.micromath.formula.button.CalcTextButton
                android:id="@+id/btn_tanh"
                style="@style/CalcButtonStyle.Function"
                android:layout_height="@dimen/function_button_height"
                android:text="tanh" />

            <com.mkulesh.micromath.formula.button.CalcTextButton
                android:id="@+id/btn_coth"
                style="@style/CalcButtonStyle.Function"
                android:layout_height="@dimen/function_button_height"
                android:text="coth" />


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <com.mkulesh.micromath.formula.button.CalcTextButton
                android:id="@+id/btn_celi"
                style="@style/CalcButtonStyle.Function"
                android:layout_height="@dimen/function_button_height"
                android:text="celi" />

            <com.mkulesh.micromath.formula.button.CalcTextButton
                android:id="@+id/btn_asinh"
                style="@style/CalcButtonStyle.Function"
                android:layout_height="@dimen/function_button_height"
                android:text="asinh" />


            <com.mkulesh.micromath.formula.button.CalcTextButton
                android:id="@+id/btn_acosh"
                style="@style/CalcButtonStyle.Function"
                android:layout_height="@dimen/function_button_height"
                android:text="acosh" />

            <com.mkulesh.micromath.formula.button.CalcTextButton
                android:id="@+id/btn_atanh"
                style="@style/CalcButtonStyle.Function"
                android:layout_height="@dimen/function_button_height"
                android:text="atanh" />

            <com.mkulesh.micromath.formula.button.CalcTextButton
                android:id="@+id/btn_acoth"
                style="@style/CalcButtonStyle.Function"
                android:layout_height="@dimen/function_button_height"
                android:text="acoth" />


        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <com.mkulesh.micromath.formula.button.CalcTextButton
                android:id="@+id/btn_re"
                style="@style/CalcButtonStyle.Function"
                android:layout_height="@dimen/function_button_height"
                android:text="re" />


            <com.mkulesh.micromath.formula.button.CalcTextButton
                android:id="@+id/btn_im"
                style="@style/CalcButtonStyle.Function"
                android:layout_height="@dimen/function_button_height"
                android:text="im" />

            <com.mkulesh.micromath.formula.button.CalcTextButton
                android:id="@+id/btn_sign"
                style="@style/CalcButtonStyle.Function"
                android:layout_height="@dimen/function_button_height"
                android:text="sign" />

            <com.mkulesh.micromath.formula.button.CalcTextButton
                android:id="@+id/btn_rnd"
                style="@style/CalcButtonStyle.Function"
                android:layout_height="@dimen/function_button_height"
                android:text="rnd" />

            <com.mkulesh.micromath.formula.button.CalcTextButton
                android:id="@+id/btn_max"
                style="@style/CalcButtonStyle.Function"
                android:layout_height="@dimen/function_button_height"
                android:text="max" />

            <com.mkulesh.micromath.formula.button.CalcTextButton
                android:id="@+id/btn_min"
                style="@style/CalcButtonStyle.Function"
                android:layout_height="@dimen/function_button_height"
                android:text="min" />


        </LinearLayout>
    </LinearLayout>


</ScrollView>